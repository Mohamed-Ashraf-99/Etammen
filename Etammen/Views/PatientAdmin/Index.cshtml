

@model IEnumerable<GetAllPatientViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Dashboard/_AdminDashboard.cshtml";
}

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.Age</td>
                <td>@patient.Gender</td>

                <td class="dropdown">
                    <button class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-sharp fa-solid fa-bars"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-action="Details" asp-controller="PatientAdmin" asp-route-id="@patient.Id">Details</a></li>
                        <li><a class="dropdown-item" asp-action="Delete" asp-controller="PatientAdmin" asp-route-id="@patient.Id">Delete</a></li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

@section JS {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}

