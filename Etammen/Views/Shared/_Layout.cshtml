        html, body {
            height: 100%;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 1000px;
        }

        .section {
            padding-top: 0px;
        }
    </style>


</head>
<body>

    <div class="wrapper">


        <!-- ======= Top Bar ======= -->
        <div id="topbar" class="d-flex align-items-center">
            <div class="container d-flex justify-content-between">
                <div class="contact-info d-flex align-items-center">
                    <i class="bi bi-envelope"></i> <a href="mailto:etammenwebsite@gmail.com">Etammen@Gmail.com</a>
                </div>
                <div class="d-none d-lg-flex social-links align-items-center ml-auto">
                </div>
                <div class="d-none d-lg-flex social-links align-items-center">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Sign Up</a>
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Log In</a>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="nav-link text-dark">Hello, @User.Identity.Name</span>
                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Log out</a>
                    }


                </div>
            </div>
        </div>

        <!-- ======= Header ======= -->

        <header id="header">

            <div class="container d-flex align-items-center">

                <h1 class="logo me-auto"><a href="/">Etammen</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>

                <nav id="navbar" class="navbar order-last order-lg-0">
                    <ul>
                        @if (User.IsInRole("Doctor"))
                        {
                            <li class="dropdown">
                                <a class="nav-link scrollto"><span>Dashboard</span> <i class="bi bi-chevron-down"></i></a>
                                <ul>
                                    <li><a asp-action="Profile" asp-controller="Doctors">Profile</a></li>
                                    <li><a asp-action="AppointmentIndex" asp-controller="Doctors">Appointments</a></li>
                                    <li><a asp-action="ClinicIndex" asp-controller="Doctors">Clinics</a></li>
                                    <li><a asp-action="DeactivateAccount" asp-controller="Doctors">Deactivate Account</a></li>
                                </ul>
                            </li>
                        } 
                         @if (User.IsInRole("Admin"))
                         {
                            <li><a asp-action="Index" asp-controller="DoctorAdmin">Admin Dashboard</a></li>
                         } 
                        @if (User.IsInRole("Patient"))
                        {
                            <li class="dropdown">
                                <a class="nav-link scrollto"><span>Dashboard</span> <i class="bi bi-chevron-down"></i></a>
                                <ul>
                                    <li><a asp-action="Profile" asp-controller="Patient">Profile</a></li>
                                    <li><a asp-action="AppointmentIndex" asp-controller="Patient">Appointments</a></li>
                                </ul>
                         
                            </li>
                        }
                    </ul>

                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>
        </div>
    </header><!-- End Header --> 
    <!-- ======= Hero Section ======= -->
        <main id="main" class="d-flex justify-content-center pt-5 flex-grow-1">
        <section class="container">
            @RenderBody()
        </section>
    </main>
    <!-- ======= Footer ======= -->
        <footer id="footer" class="footer">
            <div class="footer-top">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-4 col-md-4 footer-contact">
                            <h3>Etammen</h3>
                            <p>
                                He who has health, has hope.<br />
                                He who has hope, has everything.<br />
                                <strong>Email:</strong> etammenwebsite@example.com<br>
                            </p>
                        </div>

                        <div class="col-lg-4 col-md-4 footer-links">
                            <h4>Useful Links</h4>
                            <ul>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Home</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a asp-controller="Account" asp-action="RegisterDoctor">Etammen For Doctors</a></li>

                            </ul>
                        </div>
                        <div class="col-lg-4 col-md-4 footer-links">
                            <h4>About us</h4>
                            <p>Etammen was established in 2024 to act as a gateway between people and doctors.</p>
                            <p>All Rights reserved &copy; Tigers Team &#64; ITI</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container d-md-flex py-4">
                <div class="social-links text-center text-md-right pt-3 pt-md-0">
                    <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                    <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                    <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                    <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                </div>
            </div>
        </footer>
        </div>
