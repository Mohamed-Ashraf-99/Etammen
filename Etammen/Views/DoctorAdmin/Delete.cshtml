@model GetDoctorByIdViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Dashboard/_AdminDashboard.cshtml";
}

<h1>Delete</h1>

<form asp-action="Delete">


    <div class="doctor-profile-card">
        @{
            Html.RenderPartial("_PartialViewDoctorCard");
        }


        <div class="col-md-6 mt-3 mt-md-0">
            <div class="text-md-right">
                <input type="submit" class="btn btn-primary" style="background-color: #5D87FF;" value="Delete" />
                <input asp-for="Id" type="hidden" />
                <input asp-for="FirstName" type="hidden" />
                <input asp-for="LastName" type="hidden" />
                <input asp-for="AboutTheDoctor" type="hidden" />
                <input asp-for="Age" type="hidden" />
                <input asp-for="Gender" type="hidden" />
                <input asp-for="TotalRatings" type="hidden" />
                <input asp-for="Certificate" type="hidden" />
                <input asp-for="Degree" type="hidden" />
                <input asp-for="YearsOfExperience" type="hidden" />
            </div>
        </div>


    </div>
</form>